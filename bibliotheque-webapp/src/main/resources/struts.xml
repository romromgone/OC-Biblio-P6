<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
        "http://struts.apache.org/dtds/struts-2.5.dtd">
        
<struts>
    <package name="default" extends="struts-default">
    
        <!-- Action par dÃ©faut -->
        <default-action-ref name="index" />

        <!-- Action "index" -->
        <action name="index">        
		        <interceptor-ref name="store">
		       		 <param name="operationMode">RETRIEVE</param>
		    		</interceptor-ref>
		    		<interceptor-ref name="defaultStack" />
    		
            <result>index.jsp</result>
        </action>
        
        <!-- Action "connexion" -->
				<action name="connexion" class="com.ocp4.webapp.actions.ConnexionAction" method="doConnexion">    		
        		<interceptor-ref name="store">
				        <param name="operationMode">STORE</param>
				    </interceptor-ref>
				    <interceptor-ref name="defaultStack" />
    
    				<result name="input">index.jsp</result>
    				<result type="redirectAction">index</result>   				
				</action>
				
				<!-- Action "deconnexion" -->
				<action name="deconnexion" class="com.ocp4.webapp.actions.ConnexionAction" method="doDeconnexion">
    				<result type="redirectAction">index</result>
				</action>
				
				<!-- Action "infospersos" -->
				<action name="infospersos" class="com.ocp4.webapp.actions.InfosPersosAction" method="doInfos">
						<interceptor-ref name="store">
				        <param name="operationMode">STORE</param>
				    </interceptor-ref>
				    <interceptor-ref name="defaultStack" />
				    
    				<result name="success">/WEB-INF/infospersos.jsp</result>
    				<result name="error">index.jsp</result>
				</action>
				
				<!-- Action "emprunts" -->
				<action name="emprunts" class="com.ocp4.webapp.actions.EmpruntsAction" method="doEmprunts">
						<interceptor-ref name="store">
				        <param name="operationMode">STORE</param>
				    </interceptor-ref>
				    <interceptor-ref name="defaultStack" />
				    
    				<result name="success">/WEB-INF/emprunts.jsp</result>
    				<result name="error">index.jsp</result>				
				</action>
				
				<!-- Action "prolonger" -->
				<action name="prolonger" class="com.ocp4.webapp.actions.EmpruntsAction" method="doProlonger">    		
        		<interceptor-ref name="store">
				        <param name="operationMode">STORE</param>
				    </interceptor-ref>
				    <interceptor-ref name="defaultStack" />
    
    				<result name="input">/WEB-INF/emprunts.jsp</result>
    				<result type="redirectAction">emprunts</result>   
    				<result name="error">index.jsp</result>						
				</action>
				
				<!-- Action "rechercher" -->
				<action name="rechercher" class="com.ocp4.webapp.actions.OuvragesAction" method="doRechercher">
						<interceptor-ref name="store">
				        <param name="operationMode">STORE</param>
				    </interceptor-ref>
				    <interceptor-ref name="defaultStack" />
				    
    				<result name="success">/WEB-INF/ouvrages.jsp</result>
    				<result name="error">index.jsp</result>				
				</action>
				
				<!-- Action "reserver" -->
				<action name="reserver" class="com.ocp4.webapp.actions.OuvragesAction" method="doReserver">
						<interceptor-ref name="store">
				        <param name="operationMode">STORE</param>
				    </interceptor-ref>
				    <interceptor-ref name="defaultStack" />
				    
    				<result name="input">/WEB-INF/ouvrages.jsp</result>
    				<result name="success">/WEB-INF/ouvrages.jsp</result>   
    				<result name="error">/WEB-INF/ouvrages.jsp</result>				
				</action>
				
				<!-- Action "reservations" -->
				<action name="reservations" class="com.ocp4.webapp.actions.ReservationsAction" method="doReservations">
						<interceptor-ref name="store">
				        <param name="operationMode">STORE</param>
				    </interceptor-ref>
				    <interceptor-ref name="defaultStack" />
				    
				    <result name="input">/WEB-INF/reservations.jsp</result>
    				<result name="success">/WEB-INF/reservations.jsp</result>
    				<result name="error">index.jsp</result>					
				</action>
				
				<!-- Action "annuler" -->
				<action name="annuler" class="com.ocp4.webapp.actions.ReservationsAction" method="doAnnuler">
						<interceptor-ref name="store">
				        <param name="operationMode">STORE</param>
				    </interceptor-ref>
				    <interceptor-ref name="defaultStack" />
				    
    				<result name="input">/WEB-INF/reservations.jsp</result>
    				<result type="redirectAction">reservations</result>  
    				<result name="error">index.jsp</result>				
				</action>
				
    </package>
</struts>